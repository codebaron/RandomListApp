<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="RandomList.Views.RandomListDetailPage">

    <StackLayout>
        <Label Text="{Binding RandomList.Name}" FontSize="Large" FontAttributes="Bold" LineBreakMode="WordWrap" VerticalTextAlignment="Center" />
        <ListView ItemsSource="{Binding RandomList.ItemsRandomized}">
        </ListView>
    </StackLayout>

</ContentPage>